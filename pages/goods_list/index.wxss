/* pages/goods_list/index.wxss */
.top {
  display: flex;
  flex-direction: row
}

.top-text {
  flex: 1;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #ddd
}

.leiBiao-item {
  display: flex;
  padding: 30rpx 0;
  margin: 0 20rpx;
  border-bottom: 1rpx solid #ddd;
}

.leiBiao-left {
  width: 200rpx;
  height: 200rpx;
}

.leiBiao-left image {
  width: 200rpx;

}

.leiBiao-right {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  /* 主轴垂直排列 */
  flex-direction: column;
  justify-content: space-between;
}

.goods-name {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.goods-price {
  color: #eb4450;
  font-size: 34rpx;
}

.goods-price::before {
  content: "￥";
  font-size: 80%;
}